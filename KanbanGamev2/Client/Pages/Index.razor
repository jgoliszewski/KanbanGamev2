@page "/"

<PageTitle>KanbanGamev2 - Project Management</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1 class="display-4">Welcome to KanbanGamev2</h1>
                <p class="lead">A comprehensive project management system with real-time Kanban boards</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <span class="oi oi-magnifying-glass text-primary"></span>
                        Analysis Board
                    </h5>
                    <p class="card-text">Track features and employee assignments through the analysis process</p>
                    <a href="analysis-board" class="btn btn-primary">View Board</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <span class="oi oi-server text-success"></span>
                        Backend Board
                    </h5>
                    <p class="card-text">Monitor backend development tasks and team assignments</p>
                    <a href="backend-board" class="btn btn-success">View Board</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <span class="oi oi-monitor text-info"></span>
                        Frontend Board
                    </h5>
                    <p class="card-text">Track frontend development tasks and UI/UX progress</p>
                    <a href="frontend-board" class="btn btn-info">View Board</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <span class="oi oi-graph text-warning"></span>
                        Summary Board
                    </h5>
                    <p class="card-text">High-level overview of all features across the development lifecycle</p>
                    <a href="summary-board" class="btn btn-warning">View Board</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Quick Access</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h6>Data Views</h6>
                            <ul class="list-unstyled">
                                <li><a href="employees">👥 Employees</a></li>
                                <li><a href="features">⭐ Features</a></li>
                                <li><a href="tasks">📋 Tasks</a></li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h6>Board Features</h6>
                            <ul class="list-unstyled">
                                <li>✅ Real-time updates</li>
                                <li>🔄 Drag & drop (coming soon)</li>
                                <li>📊 Progress tracking</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h6>Next Steps</h6>
                            <ul class="list-unstyled">
                                <li>🔧 SignalR integration</li>
                                <li>🎯 Reset functionality</li>
                                <li>📱 Mobile optimization</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
