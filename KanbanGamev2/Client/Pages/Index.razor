@page "/"
@using KanbanGamev2.Shared.Services
@using KanbanGamev2.Client.Components
@inject KanbanGamev2.Shared.Services.IGameStateService GameStateService

<PageTitle>KanbanGamev2 - Project Management</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1 class="display-4">Welcome to KanbanGamev2</h1>
                <p class="lead">A comprehensive project management system with real-time Kanban boards</p>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <GameCalendar />
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="card-title">
                        <span class="oi oi-dollar"></span>
                        Company's Balance: <span class="@(GameStateService.CompanyMoney < 0 ? "text-danger" : "")">$@GameStateService.CompanyMoney.ToString("N0")</span>
                    </h3>
                    <p class="card-text">Complete features to earn money for your company!</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <MoneyHistory />
        </div>
    </div>

</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await GameStateService.LoadGameState();
    }
}
