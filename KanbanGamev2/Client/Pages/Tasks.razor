@page "/tasks"
@using KanbanGame.Shared
@using KanbanGamev2.Client.Services
@inject ITaskService TaskService

<PageTitle>Tasks</PageTitle>

<h3>Tasks</h3>

@if (TaskService.Tasks == null || !TaskService.Tasks.Any())
{
    <p>Loading tasks...</p>
}
else
{
    <div class="row">
        @foreach (var task in TaskService.Tasks)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@task.Title</h5>
                        <p class="card-text">@task.Description</p>
                        <div class="card-text">
                            <strong>Priority:</strong> <span class="badge @task.Priority.GetBadgeClass()">@task.Priority</span><br/>
                            <strong>Status:</strong> <span class="badge @task.Status.GetBadgeClass()">@task.Status</span><br/>
                            <strong>Assigned:</strong> @(task.IsAssigned ? "Assigned" : "Unassigned")<br/>
                            @if (task.DueDate.HasValue)
                            {
                                <strong>Due Date:</strong> @task.DueDate.Value.ToShortDateString()<br/>
                            }
                            <strong>Column:</strong> @task.ColumnId<br/>
                            <strong>Created:</strong> @task.CreatedAt.ToShortDateString()
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await TaskService.GetTasks();
    }
} 