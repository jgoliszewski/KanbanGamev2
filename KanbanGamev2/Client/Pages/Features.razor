@page "/features"
@using KanbanGame.Shared
@using KanbanGamev2.Client.Services
@inject IFeatureService FeatureService

<PageTitle>Features</PageTitle>

<h3>Features</h3>

@if (FeatureService.Features == null || !FeatureService.Features.Any())
{
    <p>Loading features...</p>
}
else
{
    <div class="row">
        @foreach (var feature in FeatureService.Features)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@feature.Title</h5>
                        <p class="card-text">@feature.Description</p>
                        <div class="card-text">
                            <strong>Priority:</strong> <span class="badge @feature.Priority.GetBadgeClass()">@feature.Priority</span><br/>
                            <strong>Status:</strong> <span class="badge @feature.Status.GetBadgeClass()">@feature.Status</span><br/>
                            <strong>Story Points:</strong> @feature.StoryPoints<br/>
                            <strong>Assigned:</strong> @(feature.IsAssigned ? "Assigned" : "Unassigned")<br/>
                            @if (feature.DueDate.HasValue)
                            {
                                <strong>Due Date:</strong> @feature.DueDate.Value.ToShortDateString()<br/>
                            }
                            <strong>Column:</strong> @feature.ColumnId<br/>
                            <strong>Created:</strong> @feature.CreatedAt.ToShortDateString()
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await FeatureService.GetFeatures();
    }
} 