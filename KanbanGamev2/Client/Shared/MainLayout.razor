@inherits LayoutComponentBase
@using KanbanGamev2.Client.Services
@using KanbanGamev2.Client.Components
@inject IGlobalLoaderService GlobalLoaderService
@inject ISignalRService SignalRService
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<GlobalLoader 
    IsVisible="@GlobalLoaderService.IsVisible"
    Title="@GlobalLoaderService.Title"
    Message="@GlobalLoaderService.Message" />

<NotificationPopup />

@code {
    protected override void OnInitialized()
    {
        GlobalLoaderService.LoaderStateChanged += OnLoaderStateChanged;
    }

    private bool disposed = false;

    private void OnLoaderStateChanged(bool isVisible, string title, string message)
    {
        if (!disposed)
        {
            InvokeAsync(StateHasChanged);
        }
    }

    public void Dispose()
    {
        disposed = true;
        GlobalLoaderService.LoaderStateChanged -= OnLoaderStateChanged;
    }
}
