@code {
    protected override void OnInitialized()
    {
        GameStateService.DayChanged += OnDayChanged;
        GameStateService.AchievementUnlocked += OnAchievementUnlocked;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await GameStateService.LoadGameState();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error loading game state: {ex.Message}");
            }
        }
    }

    private DateTime GetGameDate()
    {
        // Calculate date based on working days only (Monday-Friday)
        // Day 1 = first working day on or after game start date
        var workingDaysPassed = GameStateService.CurrentDay - 1;
        var currentDate = GameStateService.GameStartDate;
        
        // Find the first working day (Monday-Friday) on or after the game start date
        while (currentDate.DayOfWeek == DayOfWeek.Saturday || currentDate.DayOfWeek == DayOfWeek.Sunday)
        {
            currentDate = currentDate.AddDays(1);
        }
        
        // Calculate how many working days to add
        var weeks = workingDaysPassed / 5;
        var daysInCurrentWeek = workingDaysPassed % 5;
        
        // Get the day of week of the first working day (0=Monday, 4=Friday)
        var firstWorkingDayOfWeek = (int)currentDate.DayOfWeek - 1; // Monday=0, Friday=4
        
        // Calculate the target day of week
        var targetDayOfWeek = (firstWorkingDayOfWeek + daysInCurrentWeek) % 5;
        
        // Add full weeks and adjust to the correct day
        currentDate = currentDate.AddDays(weeks * 7);
        
        // Adjust to the correct day of week in the current week
        var currentDayOfWeek = (int)currentDate.DayOfWeek - 1;
        var dayDifference = targetDayOfWeek - currentDayOfWeek;
        currentDate = currentDate.AddDays(dayDifference);
        
        return currentDate;
    }

    private List<CalendarDay> GetCalendarDays()
    {
        var days = new List<CalendarDay>();
        var currentDate = GetGameDate();
        var firstDayOfMonth = new DateTime(currentDate.Year, currentDate.Month, 1);
        var lastDayOfMonth = firstDayOfMonth.AddMonths(1).AddDays(-1);
        
        // Get the first day to display (previous month's days)
        // Adjust for Monday as first day of week (DayOfWeek: Sunday=0, Monday=1, ..., Saturday=6)
        // We want Monday to be the first day, so we need to adjust the offset
        var dayOfWeek = (int)firstDayOfMonth.DayOfWeek;
        // Convert: Sunday=0 -> 6, Monday=1 -> 0, Tuesday=2 -> 1, ..., Saturday=6 -> 5
        var mondayOffset = dayOfWeek == 0 ? 6 : dayOfWeek - 1;
        var firstDisplayDay = firstDayOfMonth.AddDays(-mondayOffset);
        
        // Calculate the first working day for game day mapping
        var gameStartDate = GameStateService.GameStartDate.Date;
        var firstWorkingDay = gameStartDate;
        while (firstWorkingDay.DayOfWeek == DayOfWeek.Saturday || firstWorkingDay.DayOfWeek == DayOfWeek.Sunday)
        {
            firstWorkingDay = firstWorkingDay.AddDays(1);
        }
        
        // Get the day of week of the first working day (0=Monday, 4=Friday)
        var firstWorkingDayOfWeek = (int)firstWorkingDay.DayOfWeek - 1;
        
        for (int i = 0; i < 42; i++) // 6 weeks * 7 days
        {
            var dayDate = firstDisplayDay.AddDays(i);
            var isWorkingDay = dayDate.DayOfWeek != DayOfWeek.Saturday && dayDate.DayOfWeek != DayOfWeek.Sunday;
            
            int? gameDay = null;
            if (isWorkingDay && dayDate >= firstWorkingDay)
            {
                // Count working days from first working day to current day
                int workingDayCount = 0;
                var checkDate = firstWorkingDay;
                while (checkDate <= dayDate)
                {
                    if (checkDate.DayOfWeek != DayOfWeek.Saturday && checkDate.DayOfWeek != DayOfWeek.Sunday)
                    {
                        workingDayCount++;
                    }
                    checkDate = checkDate.AddDays(1);
                }
                gameDay = workingDayCount;
            }
            
            days.Add(new CalendarDay
            {
                Date = dayDate,
                Day = dayDate.Day,
                IsGameDay = gameDay.HasValue && gameDay.Value >= 1 && gameDay.Value <= GameStateService.CurrentDay + 7, // Show current + 7 future days
                GameDay = gameDay.HasValue && gameDay.Value >= 1 ? gameDay.Value.ToString() : null,
                IsCurrentGameDay = gameDay == GameStateService.CurrentDay,
                IsPastGameDay = gameDay.HasValue && gameDay.Value >= 1 && gameDay.Value < GameStateService.CurrentDay,
                IsFutureGameDay = gameDay.HasValue && gameDay.Value > GameStateService.CurrentDay,
                IsOtherMonth = dayDate.Month != currentDate.Month
            });
        }
        
        return days;
    }

    private string GetDayClass(CalendarDay day)
    {
        var classes = new List<string>();
        
        if (day.IsOtherMonth)
            classes.Add("other-month");
        
        if (day.IsCurrentGameDay)
            classes.Add("current-game-day");
        else if (day.IsPastGameDay)
            classes.Add("past-game-day");
        else if (day.IsFutureGameDay)
            classes.Add("future-game-day");
        
        return string.Join(" ", classes);
    }

    private void OnDayChanged(int newDay)
    {
        if (!disposed)
        {
            InvokeAsync(StateHasChanged);
        }
    }

    private void OnAchievementUnlocked(Achievement achievement)
    {
        if (!disposed)
        {
            InvokeAsync(StateHasChanged);
        }
    }

    private bool disposed = false;

    public void Dispose()
    {
        disposed = true;
        GameStateService.DayChanged -= OnDayChanged;
        GameStateService.AchievementUnlocked -= OnAchievementUnlocked;
    }

    private class CalendarDay
    {
        public DateTime Date { get; set; }
        public int Day { get; set; }
        public bool IsGameDay { get; set; }
        public string? GameDay { get; set; }
        public bool IsCurrentGameDay { get; set; }
        public bool IsPastGameDay { get; set; }
        public bool IsFutureGameDay { get; set; }
        public bool IsOtherMonth { get; set; }
    }
} 